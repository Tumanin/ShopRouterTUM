<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/enterExitLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/color_enter_exit"
            android:text="E"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eingang/Ausgang"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/normal_grey"/>

    <LinearLayout
        android:id="@+id/cashdeskLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/color_cashdesk"
            android:text="$"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kassen"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/normal_grey"/>

    <LinearLayout
        android:id="@+id/shelfLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/color_empty_shelf"
            android:text=""
            android:textColor="@color/dark_grey"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regal"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/normal_grey"/>

</LinearLayout>